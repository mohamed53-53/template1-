<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="allowance_type_view_form" model="ir.ui.view">
        <field name="name">allowance.type.form</field>
        <field name="model">allowance.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="gas_allowance"/>
                            <field name="tips_allowance"/>
                        </group>
                        <group>
                            <field name="bonus_allowance"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="allowance_type_view_tree" model="ir.ui.view">
        <field name="name">allowance.type.tree</field>
        <field name="model">allowance.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="gas_allowance"/>
                <field name="tips_allowance"/>
                <field name="bonus_allowance"/>

            </tree>
        </field>
    </record>
    <record id="allowance_type_action" model="ir.actions.act_window">
        <field name="name">Allowance</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">allowance.type</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new record!
            </p>
        </field>
    </record>
    <menuitem id="menu_allowance_type"
              name="Allowance Type"
              parent="hr_payroll.menu_hr_salary_configuration"
              action="allowance_type_action"
              sequence="10"/>

</odoo>

